.wrapper{style: 'height: 740px;'}
  .flex.items-center.text-primary.absolute.-top-28
    .rounded-full
      = image_tag "birdIcon.svg", class: "w-20"
    .ml-3.pt-2
      .font-bold.cursive.text-8xl Alcaraván
  .header-text
    %h2 Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.text_field :first_name, placeholder: 'Nombre'
      .field
        = f.text_field :last_name, placeholder: 'Apellido'
      .field
        = f.text_field :username, placeholder: 'Usuario'
      .field
        = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Correo'
      .field
        -# - if @minimum_password_length
        -#   %em
        -#     (#{@minimum_password_length} characters minimum)
        -# %br/
        = f.password_field :password, autocomplete: "new-password", placeholder: 'Contraseña'
      .field
        = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirmar contraseña'
      .field
        = select_tag "course_id", options_from_collection_for_select(Course.all, "id", "name"), class: "select"
      .field.flex.mb-8.justify-evenly
        %div
          .labelr= f.label :role, t("teacher")
          .labelrb.w-1.h-1= f.radio_button :role, 'teacher', {}
        %div
          .labelr= f.label :role, t("student")
          .labelrb.w-1.h-1= f.radio_button :role, 'student', {}
      .actions
        = f.submit "Registrarse", class: 'btn btn-primary'
    .text-xl.text-start= render "devise/shared/links"
