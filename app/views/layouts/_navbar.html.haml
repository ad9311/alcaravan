.navbar
  = link_to root_path do
    .flex.items-center
      .rounded-full.border.border-primary
        = image_tag "birdIcon.svg", class: "w-12"
      .ml-3.pt-2
        %span.font-bold.cursive.text-3xl Alcarav√°n
  %div
    - if current_user.student?
      %ul.grid.grid-cols-2
        %li.link
          = link_to about_index_path, class: "mt-1 text-xs text-neutral-500" do
            = image_tag "home.svg", class: "icon mx-auto"
            %span= "Inicio"
        %li.link
          = link_to questions_path, class: "mt-1 text-xs text-neutral-500" do
            = image_tag "book.svg", class: "icon mx-auto"
            %span= "Preguntas"
    - else
      %ul.grid.grid-cols-3
        %li.link
          = link_to about_index_path, class: "mt-1 text-xs text-neutral-500" do
            = image_tag "home.svg", class: "icon mx-auto"
            %span= "Inicio"
        %li.link
          = link_to students_path, class: "mt-1 text-xs text-neutral-500" do
            = image_tag "student.svg", class: "icon w-[2rem] mx-auto"
            %span= "Alumnos"
        %li.link
          = link_to levels_path, class: "mt-1 text-xs text-neutral-500" do
            = image_tag "text.svg", class: "icon mx-auto"
            %span= "Lecturas"

  .flex.items-center
    .mr-5.flex.flex-col.items-center
      %spanb.font-bold= current_user.full_name.titleize
      %span.text-xs= t(current_user.role)
    .link
      = button_to destroy_user_session_path, method: :delete, class: "icon" do
        = image_tag "logout.svg"
        %span.text-xs.text-neutral-500 Salir
  
