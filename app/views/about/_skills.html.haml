.img-justification{class: 'top-40'}
  = image_tag 'bbirds1.png'
.img-justification{class: 'bottom-10'}
  = image_tag 'garza.jpg'
.con.mt-14.mb-30
  .mb-8
    .card-header.text-center.comic.font-bold.text-4xl.mb-16
      %h1= t("about.quality_references.title")
    %p.text-justify.text-2xl= t("about.quality_references.parragraph_1")

  .mb-8
    %h2.text-start.comic.font-bold.text-3xl.mb-8= t("about.quality_references.course_1.title")
    %ul
      - 10.times do |i|
        %li.mb-1.list-disc.ml-6.text-xl.comic.text-justify
          %p= t("about.quality_references.course_1.bullet_#{i}")

  %h2.text-start.comic.font-bold.text-3xl.mb-8= t("about.quality_references.course_2.title")
  %ul
    - 10.times do |i|
      %li.mb-1.list-disc.ml-6.text-xl.comic.text-justify
        %p= t("about.quality_references.course_2.bullet_#{i}")

.mt-5.flex.justify-between
  = button_to about_paginate_path(page: "justification"), class: "w-fit text-center link-2" do
    = image_tag "back.svg", class: "icon m-auto"
    %span.text-xs.font-bold.text-indigo-600 Atr√°s
  = button_to about_paginate_path(page: "authors"), class: "w-fit text-center link-2" do
    = image_tag "next.svg", class: "icon m-auto"
    %span.text-xs.font-bold.text-indigo-600 Siguiente